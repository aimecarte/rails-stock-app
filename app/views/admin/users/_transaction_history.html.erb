<p><strong><center> <%= @user.email %>'s PROFILE  </center></strong></p>
  <br>

<table class="table table-bordered border-primary">
  <thead>
  <tr>
    <th scope="col">ID</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Is Admin</th>
    <th scope="col">Is Approved</th>
  </tr>
  </thead>
  <tr>
      <th scope="row"> <%= @user.id %> </th>
      <td><%= @user.first_name %></td>
      <td><%= @user.last_name %></td>
      <td><%= @user.isAdmin %></td>
      <td><%= @user.isApproved %></td>
      </ul>
</table>

  <br> <br>

<p><strong><center> TRANSACTION HISTORY </center></strong></p> <br>

<table class="table table-bordered border-primary">
  <thead>
  <tr>
    <th scope="col">Transaction Type</th>
    <th scope="col">Code</th>
    <th scope="col">Quantity</th>
    <th scope="col">Current Price</th>
    <th scope="col">Total</th>
    <th scope="col">Date</th>
  </tr>
  </thead>
    <% @user.transactions.each do |tx| %>
  <tr>
      <th scope="row"> ><%= tx.transaction_type %> </th>
      <td><%= tx.code %></td>
      <td><%= tx.quantity %></td>
      <td><%= tx.current_price %></td>
      <td><%= tx.total %></td>
      <td><%= tx.created_at %></td>
      </ul>
      <% end %>
</table>



