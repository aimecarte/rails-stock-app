<h1> <%= @user.email %>'s PROFILE </h1>

<p><strong>ID:</strong> <%= @user.id %></p>
<p><strong>First Name:</strong> <%= @user.first_name %> </p>
<p><strong>Last Name:</strong> <%= @user.last_name %></p>
<p><strong>IsAdmin?</strong> <%= @user.isAdmin %></p>
<p><strong>IsApproved?</strong> <%= @user.isApproved %></p>

<p><strong> TRANSACTION HISTORY </strong></p>
<ul>
  <% @user.transactions.each do |tx| %>
    <li>
      <div><%= tx.transaction_type %></div>
      <div><%= tx.code %></div>
      <div><%= tx.quantity %></div>
      <div><%= tx.current_price %></div>
      <div><%= tx.total %></div>
      <div><%= tx.created_at %></div>
    </li>
  <% end %>
</ul><br><br><br>