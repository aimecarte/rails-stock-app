<nav>
    <li><strong>WELCOME <%= @current_user.email %> ! </strong></li>
</nav>


<div class="content">
<% if @symbol %>
  <p>Symbol: <%=  @symbol %></p>
  <p>Stock Price: <%=  @stock_price %></p>
<% end %>
<%= form_with url: "/search", html: { role: "search" } , method: :get do |form| %>
  <%= form.search_field :query, aria: { label: "Seach" }, placeholder: "Search stock" %>
  <%= form.submit "Search" %>
<% end %>

<% if current_user.isApproved?%>
    <h3>Your stocks</h3>
<ul>
  <% @stocks.each do |stock| %>
    <li>
      <div><%= stock.code %></div>
      <div><%= stock.quantity %></div>
      <div>
        <%= link_to "Trade", stock_path(stock) %>
      </div>
    </li>
  <% end %>
</ul>
  <%else%>
    <p> Please wait for the admins approval of your account so you can start buying and selling stocks! </p>
    <p> For the meantime </p>
   <%end%>

<%= link_to "View Your Transactions", transactions_path  %> <br><br>


<% if current_user.isAdmin?%>
<%= link_to "Admin Page", admin_index_path, class: "btn btn-outline-warning" %> <br><br>
<% end %>

<%= link_to "Sign Out", destroy_user_session_path, 
data: {turbo_method: :delete, turbo_confirm: "Sure ka ba?"},
class: "btn btn-danger" %> 


</div>

</body>
</html>






