<h3>Search Results</h3>
<ul>
  <% @results.each do |res| %>
    <li>
      <div>
        <h3>Name: <%= res[:name] %></h3>
        <h4>Code: <%= res[:symbol] %></h4>
      </div>
      <%= form_with url: stocks_path, method: :post do |f| %>
        <div>
          <%= hidden_field_tag :name, res[:name]  %>
          <%= hidden_field_tag :code, res[:symbol]  %>
        </div>
        <div>
          <% if current_user.isApproved? || current_user.isAdmin %>
          
          <%= number_field_tag :quantity, nil , placeholder: "Quantity" %>
          <%= f.submit "Buy" %>
          <%end%>

        </div>
      <% end %>
    </li>
  <% end %>  
</ul>